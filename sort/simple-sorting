<?php
/*
*简单排序算法之直接插入排序
*/

function insertSort(array $arr){

	$len = count($arr);
	for($i=0;$i<$len;$i++){
		$min_index = $i;
		for($j=$i;$j<$len;$j++){
			if($arr[$j]<$arr[$min_index]){
				$min_index = $j;
			}
		}
		$temp = $arr[$i];
		$arr[$i] = $arr[$min_index];
		$arr[$min_index] = $temp;

	}
	print_r($arr);
}
$test = array(0,4,2,90,3,5,17,11,47,46,33,25,8,10,35,22,19);
insertSort($test);
?>
